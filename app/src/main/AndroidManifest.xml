<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ici.education.ici" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".IGAAPForm"
            android:label="@string/title_activity_igaapform"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".Registration"
            android:label="@string/title_activity_registration"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".IGAAPRegistration"
            android:label="@string/title_activity_igaapregistration"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ELLRegistration"
            android:label="@string/title_activity_ellregistration"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".UserListView"
            android:label="@string/title_activity_user_list_view"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
